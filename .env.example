# ASR Sales Calls Agent - Environment Variables
# Copy this file to .env and fill in your actual values

# ============================================
# Database Configuration (Neon PostgreSQL)
# ============================================
# Get your connection string from: https://console.neon.tech
DATABASE_URL=postgresql://user:password@ep-xxx.aws.neon.tech/ivrimeet_db?sslmode=require

# ============================================
# RunPod Serverless Configuration
# ============================================
USE_RUNPOD=true
RUNPOD_ENDPOINT_ID=ep-xxxxx
RUNPOD_API_KEY=your_runpod_api_key
RUNPOD_SERVERLESS_URL=https://your-endpoint.runpod.io

# ============================================
# Ivrit ASR API Configuration
# ============================================
IVRIT_API_KEY=your_ivrit_api_key
IVRIT_API_URL=https://api.ivrit.ai

# ============================================
# LLM Configuration (DeepSeek)
# ============================================
LLM_API_KEY=your_deepseek_api_key
LLM_MODEL=deepseek-ai/deepseek-v3.1-terminus

# ============================================
# JWT/Security Configuration
# ============================================
JWT_SECRET_KEY=your_secret_key_min_32_characters_long

# ============================================
# Gmail OAuth Configuration (Optional)
# ============================================
GMAIL_CLIENT_ID=your_gmail_client_id
GMAIL_CLIENT_SECRET=your_gmail_client_secret
GMAIL_REDIRECT_URI=http://localhost:8000/auth/gmail/callback
GMAIL_CREDENTIALS_PATH=credentials.json

# ============================================
# CORS Configuration
# ============================================
CORS_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:5173,https://your-app.netlify.app

# ============================================
# Backend Configuration
# ============================================
BACKEND_URL=http://localhost:8000
ENVIRONMENT=development
LOG_LEVEL=INFO
REQUEST_TIMEOUT_SECONDS=30

# ============================================
# Storage Configuration
# ============================================
# Audio files are stored in local 'uploads' directory
# No S3 required - files stored on server filesystem
UPLOAD_DIR=./uploads/meetings

# ============================================
# Redis Configuration (Optional - for development)
# ============================================
REDIS_URL=redis://localhost:6379/0

# ============================================
# Model Storage Configuration
# ============================================
# Models downloaded to local cache (no S3)
HF_HOME=/tmp/hf_cache

# ============================================
# Optional: Sentry Configuration (Error Monitoring)
# ============================================
# SENTRY_DSN=your_sentry_dsn

# ============================================
# Application Settings
# ============================================
APP_NAME=ASR Sales Calls Agent
APP_VERSION=0.1.0
