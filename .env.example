# ASR Sales Calls Agent - Environment Variables
# Copy this file to .env and fill in your actual values

# ============================================
# Database Configuration
# ============================================
DATABASE_URL=postgresql://user:password@localhost:5432/ivrimeet_db

# ============================================
# RunPod Serverless Configuration
# ============================================
USE_RUNPOD=true
RUNPOD_ENDPOINT_ID=ep-xxxxx
RUNPOD_API_KEY=your_runpod_api_key
RUNPOD_SERVERLESS_URL=https://your-endpoint.runpod.io

# ============================================
# AWS S3 Configuration
# ============================================
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
S3_BUCKET=your-bucket-name
S3_REGION=us-east-1

# ============================================
# Ivrit ASR API Configuration
# ============================================
IVRIT_API_KEY=your_ivrit_api_key
IVRIT_API_URL=https://api.ivrit.ai

# ============================================
# LLM Configuration (DeepSeek)
# ============================================
LLM_API_KEY=your_deepseek_api_key
LLM_MODEL=deepseek-ai/deepseek-v3.1-terminus

# ============================================
# JWT/Security Configuration
# ============================================
JWT_SECRET_KEY=your_secret_key_min_32_characters_long

# ============================================
# Gmail OAuth Configuration
# ============================================
GMAIL_CLIENT_ID=your_gmail_client_id
GMAIL_CLIENT_SECRET=your_gmail_client_secret
GMAIL_REDIRECT_URI=http://localhost:8000/auth/gmail/callback
GMAIL_CREDENTIALS_PATH=credentials.json

# ============================================
# CORS Configuration
# ============================================
CORS_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:5173,https://ivreetmeet.netlify.app

# ============================================
# Backend Configuration
# ============================================
BACKEND_URL=http://localhost:8000
ENVIRONMENT=development
LOG_LEVEL=INFO
REQUEST_TIMEOUT_SECONDS=30

# ============================================
# Redis Configuration (for development)
# ============================================
REDIS_URL=redis://localhost:6379/0

# ============================================
# Optional: Model Storage Configuration
# ============================================
# Store models in S3 (set to true for production)
USE_S3_MODELS=false
HF_HOME=/tmp/hf_cache

# ============================================
# Optional: Sentry Configuration (Error Monitoring)
# ============================================
# SENTRY_DSN=your_sentry_dsn

# ============================================
# Optional: Application Settings
# ============================================
APP_NAME=ASR Sales Calls Agent
APP_VERSION=0.1.0
